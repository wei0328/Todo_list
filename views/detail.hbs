<form action="/todos/{{todo._id}}?_method=DELETE" method="post" style="display: inline;">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" name="isDone" {{#if todo.isDone}}checked{{/if}} disabled>
            </div>
        </div>
        <input type="text" placeholder="name" name="name" value="{{todo.name}}" class="form-control" disabled>
        <div class="input-group-append">
            <a class="btn btn-success" href="/todos/{{todo._id}}/edit">edit</a>
            <button class="btn btn-danger" type="submit">delete</button>
            <a class="btn btn-dark" href="/">Back</a>
        </div>
    </div>


</form>
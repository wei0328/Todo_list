<form action="/todos/{{todo._id}}?_method=PUT" method="post" style="display: inline;">
    <div class="input-group">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" name="isDone" {{#if todo.isDone}}checked{{/if}} >
            </div>
        </div>
        <input type="text" placeholder="name" name="name" value="{{todo.name}}" class="form-control">
        <div class="input-group-append">
            
            <button class="btn btn-success" type="submit">Save</button>
            <a class="btn btn-dark" href="/">Back</a>
        </div>
    </div>


</form>